{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "RIDDL",
  "scopeName": "source.riddl",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#code-blocks"
    },
    {
      "include": "#markdown-lines"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#predefined-types"
    },
    {
      "include": "#readability-words"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#undefined-mark"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.riddl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.riddl",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.riddl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.riddl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "code-blocks": {
      "patterns": [
        {
          "name": "string.quoted.triple.riddl",
          "begin": "```",
          "end": "```"
        }
      ]
    },
    "markdown-lines": {
      "patterns": [
        {
          "name": "markup.other.markdown-line.riddl",
          "match": "^\\s*\\|.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.riddl",
          "match": "\\b(if|then|else|do|when|for|foreach|return)\\b"
        },
        {
          "name": "keyword.other.definition.riddl",
          "match": "\\b(domain|context|entity|type|command|query|event|result|record|graph|table|function|handler|saga|epic|user|author|adaptor|projector|repository|streamlet|source|sink|merge|split|router|flow|pipe|plant|module|nebula)\\b"
        },
        {
          "name": "keyword.other.import.riddl",
          "match": "\\b(include|import)\\b"
        },
        {
          "name": "keyword.other.riddl",
          "match": "\\b(acquires|all|any|append|attachment|become|benefit|brief|briefly|body|call|case|capability|commands|condition|connector|constant|container|contains|create|described|description|details|direct|presents|email|end|error|example|execute|explained|explanation|field|file|focus|from|fully|group|index|init|inlet|inlets|input|invariant|items|label|link|many|mapping|message|morph|name|on|one|or|organization|option|optional|options|other|outlet|outlets|output|parallel|range|reference|relationship|remove|replica|reply|requires|required|results|returns|reverted|schema|selects|send|sequence|set|show|shown|state|step|stop|story|take|tell|term|title|url|updates|value|void|where)\\b"
        }
      ]
    },
    "predefined-types": {
      "patterns": [
        {
          "name": "support.type.riddl",
          "match": "\\b(Abstract|Blob|Boolean|Current|Currency|Date|DateTime|Decimal|Duration|Id|Integer|Location|Length|Luminosity|Mass|Mole|Nothing|Natural|Number|Pattern|Range|Real|String|Temperature|Time|TimeStamp|Unknown|URI|UserId|UUID|Whole|ZonedDate|ZonedDateTime)\\b"
        }
      ]
    },
    "readability-words": {
      "patterns": [
        {
          "name": "keyword.other.readability.riddl",
          "match": "\\b(and|are|as|at|by|for|from|in|is|of|so|that|to|wants|with)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.riddl",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        }
      ]
    },
    "undefined-mark": {
      "patterns": [
        {
          "name": "constant.language.undefined.riddl",
          "match": "\\?\\?\\?"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.riddl",
          "match": "[=+?*@]"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block.riddl",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.parameters.riddl",
          "match": "[()]"
        },
        {
          "name": "punctuation.definition.array.riddl",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.separator.riddl",
          "match": "[,:]"
        },
        {
          "name": "punctuation.accessor.riddl",
          "match": "\\."
        },
        {
          "name": "punctuation.separator.pipe.riddl",
          "match": "\\|"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.riddl",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
